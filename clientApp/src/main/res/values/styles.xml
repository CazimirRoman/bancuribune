<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="text">
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>

        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="text.regular">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text.small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text.medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text.small.gray">
        <item name="android:color">@android:color/darker_gray</item>
    </style>

    <style name="text.medium.gray">
        <item name="android:color">@android:color/darker_gray</item>
    </style>

    <style name="textFAB">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="fa_icon">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">10sp</item>
    </style>



</resources>
