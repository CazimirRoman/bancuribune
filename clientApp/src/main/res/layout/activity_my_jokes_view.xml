<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <include
        layout="@layout/app_bar_main"
        android:id="@+id/include_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
            android:layout_width="120dp"
            android:id="@+id/profileImage"
            android:layout_margin="20dp"
            app:bootstrapSize="xs"
            android:layout_height="120dp"
            android:src="@drawable/close"
            app:bootstrapBrand="info"
            app:hasBorder="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <cazimir.com.bancuribune.ui.FontAwesomeTextView
                android:id="@+id/profileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_gravity="fill"
                android:textStyle="bold"
                android:textSize="25sp"
                tools:text="Cazimir Roman"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <cazimir.com.bancuribune.ui.FontAwesomeTextView
                    style="@style/fontAwesome.secondaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="@string/total_points"/>

                <cazimir.com.bancuribune.ui.FontAwesomeTextView
                    android:id="@+id/profilePoints"
                    style="@style/fontAwesome.secondaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="345"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/myJokesList"
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</LinearLayout>
