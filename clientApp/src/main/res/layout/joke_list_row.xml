<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:padding="20dp">

    <LinearLayout
        android:id="@+id/jokeTextContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <cazimir.com.bancuribune.ui.FontAwesomeTextView
            android:id="@+id/jokeText"
            style="@style/text.regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            tools:text="Joke Text"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:layout_gravity="start">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <cazimir.com.bancuribune.ui.FontAwesomeTextView
                    android:id="@+id/share"
                    style="@style/fa_icon"
                    android:elevation="20dp"
                    app:elevation = "20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_icon_share">
                </cazimir.com.bancuribune.ui.FontAwesomeTextView>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <cazimir.com.bancuribune.ui.FontAwesomeTextView
                    android:id="@+id/vote"
                    style="@style/fa_icon"
                    android:elevation="20dp"
                    android:layout_gravity="center_vertical"
                    app:elevation = "20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_icon_thumbs_up">
                </cazimir.com.bancuribune.ui.FontAwesomeTextView>

            </FrameLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/added_by_label"/>

                <TextView
                    android:id="@+id/authorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="AuthorText"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/point_label"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/points"
                    android:layout_height="wrap_content"
                    tools:text="456"/>


            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:layout_height="1dp"/>

</LinearLayout>